Autotest.add_hook :initialize do |a|
  all_specs = %r%^spec/.+_spec\.rb$%
  a.add_mapping(%r%^.+\.[hmc]$%) {
    a.files_matching all_specs
  }
  a.add_mapping(%r%^.+\.xcodeproj/project\.pbxproj$%) {
    a.files_matching all_specs
  }
  a.add_mapping(%r%^\.autotest$%) {
    a.files_matching all_specs
  }
end
